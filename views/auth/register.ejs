<%- include('../partials/header') %>

<div class="auth-container">
    <div class="auth-box luxury-container">
        <h2 class="heading-primary text-center mb-8">Create Your Account</h2>
        
        <% if (messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger luxury-alert">
                <%= messages.error %>
            </div>
        <% } %>

        <form action="/register" method="POST" class="luxury-form">
            <div class="form-group mb-6">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" id="firstName" name="firstName" required class="form-control">
            </div>

            <div class="form-group mb-6">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" id="lastName" name="lastName" required class="form-control">
            </div>

            <div class="form-group mb-6">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" required class="form-control">
            </div>

            <div class="form-group mb-6">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required class="form-control">
            </div>

            <div class="form-group mb-6">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" id="email" name="email" required class="form-control">
            </div>

            <div class="form-group mb-6">
                <label for="mobile" class="form-label">Mobile Number</label>
                <input type="text" id="mobile" name="mobile" class="form-control">
            </div>

            <button type="submit" class="luxury-button w-full">Register</button>
        </form>

        <div class="auth-footer text-center mt-8">
            <p class="text-muted">Already have an account? <a href="/auth/login" class="luxury-link">Sign In</a></p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

<style>
    .auth-container {
        min-height: 100vh;
        background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('/assets/img/auth-bg.jpg') center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .luxury-container {
        background: rgba(26, 26, 26, 0.85);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(197, 168, 128, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        padding: 3rem;
        width: 100%;
        max-width: 500px;
    }

    .luxury-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    }

    .heading-primary {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.5rem;
        color: var(--primary-color);
    }

    .form-control {
        width: 100%;
        padding: 0.8rem;
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(197,168,128,0.3);
        border-radius: 5px;
        color: white;
        font-family: 'Montserrat', sans-serif;
    }

    .form-label {
        display: block;
        color: #999;
        margin-bottom: 0.5rem;
        font-family: 'Montserrat', sans-serif;
    }

    .luxury-button {
        background: var(--primary-color);
        color: var(--secondary-color);
        padding: 0.8rem 2rem;
        border-radius: 5px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: 2px solid var(--primary-color);
    }

    .luxury-button:hover {
        background: transparent;
        color: var(--primary-color);
    }

    .luxury-link {
        color: var(--primary-color);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .luxury-link:hover {
        color: #fff;
    }

    .luxury-alert {
        background: rgba(220,53,69,0.1);
        color: #dc3545;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1rem;
    }

    .text-muted {
        color: #999;
        font-family: 'Montserrat', sans-serif;
    }
</style>

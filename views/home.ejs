  <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="assets/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/lenis@1.1.13/dist/lenis.css">
  <script src="https://unpkg.com/lenis@1.1.13/dist/lenis.min.js"></script>

  <style>
    .btn {
      display: inline-block;
      padding: 1rem 2.5rem;
      font-size: 1.1rem;
      font-family: 'Montserrat', sans-serif;
      color: white;
      background: var(--primary-color);
      border: 2px solid var(--primary-color);
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .btn:hover {
      background: transparent;
      color: var(--primary-color);
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(197, 168, 128, 0.3);
    }

    .btn-outline {
      background: transparent;
      color: white;
      border: 2px solid white;
    }

    .btn-outline:hover {
      background: white !important;
      color: var(--primary-color) !important;
      border-color: white !important;
    }

    .hero-buttons {
      margin-top: 2rem;
      display: flex;
      gap: 1.5rem;
    }

    @media (max-width: 768px) {
      .hero-buttons {
        flex-direction: column;
        align-items: center;
      }
      
      .btn {
        width: 100%;
        max-width: 300px;
        text-align: center;
      }
    }
  </style>

</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-cente">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">
      <h1 class="logo me-auto me-lg-0"><a href="index.html">Restaurantly</a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo me-auto me-lg-0"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav id="navbar" class="navbar order-last order-lg-0">
        <ul>
          <% if (user) { %>
            <% if (isAdmin) { %>
              <li><a class="nav-link scrollto" href="/admin/menu">Inventory</a></li>
              <li><a class="nav-link scrollto" href="/admin/orders">Order Management</a></li>
              <li><a class="nav-link scrollto" href="/admin/users">Users Management</a></li>
              <li><a class="nav-link scrollto" href="/tables">Tables Management</a></li>
              <li><a class="nav-link scrollto" href="/admin/orders/history">Order History</a></li>
              <% } else { %>
                <li><a class="nav-link scrollto" href="/customer/menu">Menu</a></li>
                <li><a class="nav-link scrollto" href="/cart/view">Cart</a></li>
                <li><a class="nav-link scrollto" href="/customer/orders">Orders</a></li>
                <li><a class="nav-link scrollto" href="/tables">Tables</a></li>
                <% } %>
                  <li class="dropdown"><a href="#"><span>Account</span> <i class="bi bi-chevron-down"></i></a>
                    <ul>
                      <li><a href="/user/profile">Profile</a></li>
                      <li><a href="/logout">Logout</a></li>
                    </ul>
                  </li>
                  <% } else { %>
                    <li><a class="nav-link scrollto" href="/login">Login</a></li>
                    <li><a class="nav-link scrollto" href="/register">Register</a></li>
                    <% } %>
                      <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->
      <!-- <a href="#book-a-table" class="book-a-table-btn scrollto d-none d-lg-flex">Book a table</a> -->
    </div>

  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section class="hero" style="height: 100vh; background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/assets/img/hero-bg.jpg') center/cover; display: flex; align-items: center; color: white;">
    <div class="container">
      <div class="hero-content fade-in">
        <h1 style="font-size: 4.5rem; margin-bottom: 1rem; font-weight: 700; font-family: 'Cormorant Garamond', serif;">Luxury Dining</h1>
        <p style="font-size: 1.4rem; margin-bottom: 2rem; max-width: 600px; line-height: 1.6;">Experience culinary excellence in an atmosphere of unparalleled sophistication.</p>
        <div class="hero-buttons">
          <a href="/menu" class="btn">Explore Menu</a>
          <a href="/tables" class="btn btn-outline">Reserve Table</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Section -->
  <section class="section" style="background-color: #0c0c0c; color: white; padding: 8rem 0;">
    <div class="container">
      <div class="featured-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem;">
        <div class="featured-item fade-in">
          <img src="/assets/img/appetizer.jpg" alt="Appetizers" style="width: 100%; height: 400px; object-fit: cover; border-radius: 10px; margin-bottom: 1.5rem;">
          <h3 style="font-size: 1.8rem; color: var(--primary-color); margin-bottom: 1rem;">Exquisite Appetizers</h3>
          <p style="color: #999; line-height: 1.6;">Begin your culinary journey with our carefully crafted appetizers, each a masterpiece of flavor and presentation.</p>
        </div>
        <div class="featured-item fade-in">
          <img src="/assets/img/main-course.jpg" alt="Main Course" style="width: 100%; height: 400px; object-fit: cover; border-radius: 10px; margin-bottom: 1.5rem;">
          <h3 style="font-size: 1.8rem; color: var(--primary-color); margin-bottom: 1rem;">Signature Mains</h3>
          <p style="color: #999; line-height: 1.6;">Indulge in our chef's specially curated main courses, where tradition meets innovation.</p>
        </div>
        <div class="featured-item fade-in">
          <img src="/assets/img/dessert.jpg" alt="Desserts" style="width: 100%; height: 400px; object-fit: cover; border-radius: 10px; margin-bottom: 1.5rem;">
          <h3 style="font-size: 1.8rem; color: var(--primary-color); margin-bottom: 1rem;">Divine Desserts</h3>
          <p style="color: #999; line-height: 1.6;">Complete your dining experience with our decadent desserts, each a sweet finale to your meal.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section about-section" style="padding: 8rem 0; background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('/assets/img/about-bg.jpg') center/cover fixed;">
    <div class="container">
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center;">
        <div class="fade-in">
          <h2 style="font-size: 3rem; color: white; margin-bottom: 1.5rem;">Our Story</h2>
          <p style="color: #ccc; line-height: 1.8; margin-bottom: 2rem; font-size: 1.1rem;">
            At Luxury Dining, we blend traditional flavors with modern culinary techniques to create an 
            unforgettable dining experience. Our expert chefs source only the finest ingredients to craft 
            dishes that delight both the palate and the eye.
          </p>
          <div class="stats" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; margin-top: 3rem;">
            <div class="stat-item">
              <h3 style="font-size: 2.5rem; color: var(--primary-color);">15+</h3>
              <p style="color: white;">Years of Excellence</p>
            </div>
            <div class="stat-item">
              <h3 style="font-size: 2.5rem; color: var(--primary-color);">50+</h3>
              <p style="color: white;">Signature Dishes</p>
            </div>
            <div class="stat-item">
              <h3 style="font-size: 2.5rem; color: var(--primary-color);">5000+</h3>
              <p style="color: white;">Happy Guests</p>
            </div>
          </div>
        </div>
        <div class="about-image fade-in" style="position: relative;">
          <img src="/assets/img/chef.jpg" alt="Our Chef" style="width: 100%; height: auto; border-radius: 10px;">
          <div style="position: absolute; bottom: -30px; right: -30px; width: 200px; height: 200px; background-color: var(--primary-color); z-index: -1; border-radius: 10px;"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Special Menu Section -->
  <section class="section" style="background-color: #0c0c0c; color: white; padding: 8rem 0;">
    <div class="container">
      <div class="text-center fade-in" style="margin-bottom: 4rem;">
        <h2 style="font-size: 3rem;">Special Menu</h2>
        <p style="color: var(--primary-color); font-size: 1.2rem;">Culinary Excellence</p>
      </div>
      <div class="menu-showcase" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
        <% menuItems.forEach(item => { %>
          <div class="menu-item fade-in" style="background: rgba(255,255,255,0.05); padding: 2rem; border-radius: 10px; backdrop-filter: blur(10px);">
            <img src="<%= item.image %>" alt="<%= item.name %>" style="width: 100%; height: 250px; object-fit: cover; border-radius: 5px; margin-bottom: 1.5rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
              <h3 style="font-size: 1.5rem; color: white;"><%= item.name %></h3>
              <span style="color: var(--primary-color); font-size: 1.2rem;">$<%= item.price %></span>
            </div>
            <p style="color: #999; margin-bottom: 1.5rem;"><%= item.description %></p>
            <button class="btn" style="width: 100%;">Order Now</button>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Reservation Section -->
  <section class="section reservation-section" style="padding: 8rem 0; background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/assets/img/reservation-bg.jpg') center/cover fixed;">
    <div class="container">
      <div style="max-width: 800px; margin: 0 auto; text-align: center;">
        <div class="fade-in">
          <h2 style="font-size: 3rem; color: white; margin-bottom: 1.5rem;">Reserve Your Table</h2>
          <p style="color: #ccc; margin-bottom: 2.5rem; font-size: 1.2rem;">Experience the perfect blend of ambiance and culinary excellence</p>
          <a href="/tables" class="btn" style="padding: 1rem 3rem; font-size: 1.1rem;">Make Reservation</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Custom Styles -->
  <style>
    .featured-item {
      transition: transform 0.3s ease;
    }
    
    .featured-item:hover {
      transform: translateY(-10px);
    }

    .menu-item {
      transition: all 0.3s ease;
    }

    .menu-item:hover {
      transform: translateY(-10px);
      background: rgba(255,255,255,0.1);
    }

    @media (max-width: 768px) {
      .featured-grid {
        grid-template-columns: 1fr !important;
      }

      .hero h1 {
        font-size: 3rem !important;
      }
      
      .section {
        padding: 4rem 0 !important;
      }

      [style*="grid-template-columns: 1fr 1fr"] {
        grid-template-columns: 1fr !important;
      }

      .stats {
        grid-template-columns: 1fr !important;
        text-align: center;
      }
    }
  </style>


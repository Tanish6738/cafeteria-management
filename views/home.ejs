                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="container">
      <div class="copyright">
        &copy; Copyright <strong><span>Cafe Luxe</span></strong>. All Rights Reserved
      </div>
        </div>
  </footer><!-- End Footer -->


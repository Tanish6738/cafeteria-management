<%- include('../partials/header') %>

<div class="payment-container" style="min-height: 100vh; background: linear-gradient(rgba(0,0,0,0.85), rgba(0,0,0,0.85)), url('/assets/img/payment-bg.jpg') center/cover; padding: 6rem 0;">
    <div class="container">
        <div class="payment-content" style="max-width: 600px; margin: 0 auto;">
            <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 3rem; color: var(--primary-color); text-align: center; margin-bottom: 2rem;">Secure Payment</h1>
            
            <div class="payment-form" style="background: rgba(255,255,255,0.05); backdrop-filter: blur(10px); padding: 3rem; border-radius: 10px; box-shadow: 0 15px 35px rgba(0,0,0,0.2);">
                <div class="order-summary" style="margin-bottom: 3rem; padding-bottom: 2rem; border-bottom: 1px solid rgba(197,168,128,0.2);">
                    <h2 style="font-family: 'Cormorant Garamond', serif; font-size: 2rem; color: white; margin-bottom: 1.5rem;">Order Summary</h2>
                    <div class="summary-details" style="color: #999; font-family: 'Montserrat', sans-serif;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 1rem;">
                            <span>Table Reservation</span>
                            <span style="color: var(--primary-color)">$50.00</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 1rem;">
                            <span>Service Fee</span>
                            <span style="color: var(--primary-color)">$5.00</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; font-weight: bold; margin-top: 1.5rem;">
                            <span>Total</span>
                            <span style="color: var(--primary-color); font-size: 1.2rem;">$55.00</span>
                        </div>
                    </div>
                </div>

                <form id="payment-form" action="/tables/process-payment" method="POST">
                    <div class="form-group" style="margin-bottom: 1.5rem;">
                        <label style="display: block; color: #999; margin-bottom: 0.5rem; font-family: 'Montserrat', sans-serif;">Card Number</label>
                        <input type="text" name="cardNumber" required pattern="[0-9]{16}" placeholder="1234 5678 9012 3456" class="form-control" style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid rgba(197,168,128,0.3); border-radius: 5px; color: white; font-family: 'Montserrat', sans-serif;">
                    </div>

                    <div class="form-row" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 1.5rem;">
                        <div class="form-group">
                            <label style="display: block; color: #999; margin-bottom: 0.5rem; font-family: 'Montserrat', sans-serif;">Expiry Date</label>
                            <input type="text" name="expiry" required pattern="[0-9]{2}/[0-9]{2}" placeholder="MM/YY" class="form-control" style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid rgba(197,168,128,0.3); border-radius: 5px; color: white; font-family: 'Montserrat', sans-serif;">
                        </div>

                        <div class="form-group">
                            <label style="display: block; color: #999; margin-bottom: 0.5rem; font-family: 'Montserrat', sans-serif;">CVV</label>
                            <input type="text" name="cvv" required pattern="[0-9]{3,4}" placeholder="123" class="form-control" style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid rgba(197,168,128,0.3); border-radius: 5px; color: white; font-family: 'Montserrat', sans-serif;">
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 2rem;">
                        <label style="display: block; color: #999; margin-bottom: 0.5rem; font-family: 'Montserrat', sans-serif;">Name on Card</label>
                        <input type="text" name="cardName" required placeholder="John Doe" class="form-control" style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid rgba(197,168,128,0.3); border-radius: 5px; color: white; font-family: 'Montserrat', sans-serif;">
                    </div>

                    <button type="submit" class="btn" style="width: 100%; padding: 1rem; background: var(--primary-color); color: white; border: none; border-radius: 5px; font-family: 'Montserrat', sans-serif; text-transform: uppercase; letter-spacing: 1px; cursor: pointer; transition: all 0.3s ease;">Complete Payment</button>
                </form>

                <div class="security-info" style="margin-top: 2rem; text-align: center;">
                    <p style="color: #999; font-family: 'Montserrat', sans-serif; font-size: 0.9rem;">
                        <i class="fas fa-lock" style="color: var(--primary-color); margin-right: 0.5rem;"></i>
                        Your payment information is secure and encrypted
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 2px rgba(197,168,128,0.2);
    }

    .btn:hover {
        background: transparent !important;
        color: var(--primary-color) !important;
        box-shadow: inset 0 0 0 2px var(--primary-color);
    }

    @media (max-width: 768px) {
        .payment-form {
            padding: 2rem;
        }
        
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<%- include('../partials/footer') %>

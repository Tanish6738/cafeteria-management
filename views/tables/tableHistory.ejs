<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table History</title>
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Playfair Display', serif;
            background: url('https://images.unsplash.com/photo-1526234362653-3b75a0c07438?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
        }

        .table-container {
            background-color: rgba(60, 61, 55, 0.85);
            border-radius: 15px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3);
            padding: 50px 20px;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #697565;
            border-color: #697565;
            color: #fff;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #3C3D37;
            border-color: #3C3D37;
        }

        .hover-scale {
            transition: transform 0.3s ease-in-out;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }

        .success-message {
            background-color: rgba(144, 238, 144, 0.8);
            border: 1px solid green;
            color: green;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .error-message {
            background-color: rgba(255, 99, 71, 0.8);
            border: 1px solid red;
            color: rgb(255, 255, 255);
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('../partials/navbar') %>

    <div class="container mx-auto mt-10 fade-in">
        <h2 class="text-5xl font-bold mb-10 text-center text-[#4b3a36]">Table History</h2>

        <!-- Flash Messages -->
        <% if (flashMessages && flashMessages.success_msg) { %>
            <div class="success-message">
                <strong>Success!</strong> <%= flashMessages.success_msg %>
            </div>
        <% } %>
        <% if (flashMessages && flashMessages.error_msg) { %>
            <div class="error-message">
                <strong>Error!</strong> <%= flashMessages.error_msg %>
            </div>
        <% } %>

        <!-- Table History Table -->
        <div class="table-container">
            <div class="overflow-x-auto">
                <table class="min-w-full bg-transparent text-light">
                    <thead>
                        <tr class="bg-gray-700">
                            <th class="py-4 px-6 border-b text-left">Table Number</th>
                            <th class="py-4 px-6 border-b text-left">Status</th>
                            <th class="py-4 px-6 border-b text-left">Reserved By</th>
                            <th class="py-4 px-6 border-b text-left">Capacity</th>
                            <th class="py-4 px-6 border-b text-left">Reservation Start</th>
                            <th class="py-4 px-6 border-b text-left">Reservation End</th>
                            <th class="py-4 px-6 border-b text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (tableHistory && tableHistory.length > 0) { %>
                            <% tableHistory.forEach(table => { %>
                                <tr class="border-t">
                                    <td class="py-2 px-6 border-b"><%= table.tableNumber %></td>
                                    <td class="py-2 px-6 border-b capitalize"><%= table.status %></td>
                                    <td class="py-2 px-6 border-b"><%= table.reservedBy ? table.reservedBy.username : 'N/A' %></td>
                                    <td class="py-2 px-6 border-b"><%= table.capacity %></td>
                                    <td class="py-2 px-6 border-b">
                                        <% if (table.reservationStartTime && !isNaN(new Date(table.reservationStartTime))) { %>
                                            <%= new Date(table.reservationStartTime).toLocaleString() %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td class="py-2 px-6 border-b">
                                        <% if (table.reservationEndTime && !isNaN(new Date(table.reservationEndTime))) { %>
                                            <%= new Date(table.reservationEndTime).toLocaleString() %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td class="py-2 px-6 border-b">
                                        <a href="/tables/<%= table._id %>/" class="btn-primary hover-scale py-2 px-4 rounded" aria-label="View Table Details">View</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="py-4 px-6 text-center text-gray-600">No table history found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script>
        // Burger menus
        document.addEventListener('DOMContentLoaded', function () {
            // open
            const burger = document.querySelectorAll('.navbar-burger');
            const menu = document.querySelectorAll('.navbar-menu');

            if (burger.length && menu.length) {
                for (var i = 0; i < burger.length; i++) {
                    burger[i].addEventListener('click', function () {
                        for (var j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }

            // close
            const close = document.querySelectorAll('.navbar-close');
            const backdrop = document.querySelectorAll('.navbar-backdrop');

            if (close.length) {
                for (var i = 0; i < close.length; i++) {
                    close[i].addEventListener('click', function () {
                        for (var j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }

            if (backdrop.length) {
                for (var i = 0; i < backdrop.length; i++) {
                    backdrop[i].addEventListener('click', function () {
                        for (var j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }
        });
        
        // GSAP Animations
        gsap.from('.table-container', {
            duration: 1,
            y: 50,
            opacity: 0,
            stagger: 0.2
        });
    </script>
</body>

</html>

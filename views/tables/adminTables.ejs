<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('../partials/links') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lenis/1.0.0/lenis.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(rgba(26, 26, 26, 0.9), rgba(26, 26, 26, 0.9)),
                url('https://images.unsplash.com/photo-1526234362653-3b75a0c07438?q=80&w=1932&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
            min-height: 100vh;
        }

        .table-section {
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(197, 168, 128, 0.1);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }

        .table-section:hover {
            border-color: rgba(197, 168, 128, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        }

        .action-button {
            background: rgba(197, 168, 128, 0.1);
            border: 1px solid rgba(197, 168, 128, 0.2);
            color: #C5A880;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.3s ease;
            font-size: 0.875rem;
            cursor: pointer;
        }

        .action-button:hover {
            background: rgba(197, 168, 128, 0.2);
            border-color: rgba(197, 168, 128, 0.4);
            transform: translateY(-1px);
        }

        .delete-button {
            background: rgba(220, 38, 38, 0.1);
            border-color: rgba(220, 38, 38, 0.2);
            color: #ef4444;
        }

        .delete-button:hover {
            background: rgba(220, 38, 38, 0.2);
            border-color: rgba(220, 38, 38, 0.4);
        }

        .table-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .table-card {
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(197, 168, 128, 0.1);
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            color: #ECDFCC !important;
        }

        .table-card:hover {
            border-color: rgba(197, 168, 128, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            transform: translateY(-2px);
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid rgba(197, 168, 128, 0.1);
        }

        .table-info {
            margin-bottom: 1rem;
            color: #ECDFCC !important;
            opacity: 0.9;
        }

        .table-actions {
            display: flex;
            gap: 0.5rem;
            justify-content: flex-end;
        }

        .table-number {
            font-size: 1.5rem;
            font-weight: 600;
            color: #C5A880 !important;
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
            color: #ECDFCC !important;
        }

        @media (max-width: 640px) {
            .table-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body class="min-h-screen bg-[#1a1a1a]">
    <%- include('../partials/navbar') %>

    <div class="container mx-auto px-4 py-8">
        <div class="admin-header text-center mb-8">
            <h1 class="text-4xl font-bold text-[#C5A880] mb-2">Table Management</h1>
            <p class="text-[#ECDFCC]/70">Manage and monitor all tables</p>
        </div>

        <!-- Flash Messages -->
        <% if (flashMessages.success_msg) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Success!</strong>
                <span class="block sm:inline"><%= flashMessages.success_msg %></span>
            </div>
        <% } %>
        <% if (flashMessages.error_msg) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline"><%= flashMessages.error_msg %></span>
            </div>
        <% } %>

        <!-- Add New Table Button -->
        <div class="flex justify-end mb-6">
            <a href="/tables/new" class="action-button">
                <i class="fas fa-plus mr-2"></i>Add New Table
            </a>
        </div>

        <!-- Reserved Tables Section -->
        <div class="table-section">
            <h2 class="text-2xl font-bold text-[#C5A880] mb-4">Reserved Tables</h2>
            <div class="table-grid">
                <% if (reservedTables.length > 0) { %>
                    <% reservedTables.forEach(table => { %>
                        <div class="table-card">
                            <div class="table-header">
                                <h3 class="text-xl font-semibold text-[#C5A880]">Table <%= table.tableNumber %></h3>
                                <span class="px-2 py-1 text-sm rounded-full" style="background: rgba(197, 168, 128, 0.1); color: #C5A880; border: 1px solid rgba(197, 168, 128, 0.3);">
                                    Reserved
                                </span>
                            </div>
                            <div class="table-info">
                                <p><strong>Capacity:</strong> <%= table.capacity %> seats</p>
                                <p><strong>Reserved By:</strong> <%= table.reservedBy ? table.reservedBy.firstName + ' ' + table.reservedBy.lastName : 'Unknown' %></p>
                            </div>
                            <div class="table-actions">
                                <a href="/tables/<%= table._id %>/edit" class="action-button">Edit</a>
                                <button onclick="deleteTable('<%= table._id %>')" class="action-button delete-button">Delete</button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-8 text-[#ECDFCC]/70">
                        <p>No reserved tables at the moment</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Vacant Tables Section -->
        <div class="table-section">
            <h2 class="text-2xl font-bold text-[#C5A880] mb-4">Vacant Tables</h2>
            <div class="table-grid">
                <% if (vacantTables.length > 0) { %>
                    <% vacantTables.forEach(table => { %>
                        <div class="table-card">
                            <div class="table-header">
                                <h3 class="text-xl font-semibold text-[#C5A880]">Table <%= table.tableNumber %></h3>
                                <span class="px-2 py-1 text-sm rounded-full" style="background: rgba(39, 174, 96, 0.1); color: #27AE60; border: 1px solid rgba(39, 174, 96, 0.3);">
                                    Vacant
                                </span>
                            </div>
                            <div class="table-info">
                                <p><strong>Capacity:</strong> <%= table.capacity %> seats</p>
                            </div>
                            <div class="table-actions">
                                <a href="/tables/<%= table._id %>/edit" class="action-button">Edit</a>
                                <button onclick="deleteTable('<%= table._id %>')" class="action-button delete-button">Delete</button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-8 text-[#ECDFCC]/70">
                        <p>No vacant tables at the moment</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>    <%- include('../partials/scripts') %>


    <script>
        // Initialize Lenis for smooth scrolling
        const lenis = new Lenis({
            duration: 1.2,
            easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
            direction: 'vertical',
            gestureDirection: 'vertical',
            smooth: true,
            mouseMultiplier: 1,
            smoothTouch: false,
            touchMultiplier: 2,
            infinite: false,
        });

        function raf(time) {
            lenis.raf(time);
            requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);

        // Delete table function
        function deleteTable(tableId) {
            if (confirm('Are you sure you want to delete this table?')) {
                window.location.href = `/tables/${tableId}/delete`;
            }
        }

        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Fade in animations for sections
        gsap.utils.toArray('.table-section').forEach(section => {
            gsap.from(section, {
                opacity: 0,
                y: 50,
                duration: 1,
                scrollTrigger: {
                    trigger: section,
                    start: 'top 80%',
                    end: 'top 50%',
                    scrub: 1
                }
            });
        });

        // Table cards animation
        gsap.utils.toArray('.table-card').forEach(card => {
            gsap.from(card, {
                opacity: 0,
                y: 30,
                duration: 0.5,
                scrollTrigger: {
                    trigger: card,
                    start: 'top 90%',
                    end: 'top 60%',
                    scrub: 1
                }
            });
        });
    </script>
</body>

</html>

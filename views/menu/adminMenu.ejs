<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Menu</title>
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Playfair Display', serif;
            background: url('https://images.unsplash.com/photo-1526234362653-3b75a0c07438?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
        }

        .table-section {
            background-color: rgba(51, 51, 51, 0.85);
            border-radius: 15px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3);
            padding: 50px 20px;
            margin-bottom: 20px;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .table-section:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .btn-primary {
            background-color: #555;
            border-color: #555;
            color: #fff;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #333;
            border-color: #333;
        }

        .hover-scale {
            transition: transform 0.3s ease-in-out;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }

        .success-message {
            background-color: rgba(144, 238, 144, 0.8);
            border: 1px solid green;
            color: green;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
            animation: fadeIn 1s ease-in-out;
        }

        .error-message {
            background-color: rgba(255, 99, 71, 0.8);
            border: 1px solid red;
            color: rgb(255, 255, 255);
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
            animation: fadeIn 1s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .table-section table {
            transition: all 0.3s ease-in-out;
        }

        .table-section table tr:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .table-section table th, .table-section table td {
            transition: all 0.3s ease-in-out;
        }

        .table-section table th:hover, .table-section table td:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('../partials/navbar') %>

    <div class="container mx-auto mt-10 fade-in">
        <h2 class="text-5xl font-bold mb-10 text-center text-[#ECDFCC]">Admin Inventory Management</h2>

        <!-- Flash Messages -->
        <% if (flashMessages.success_msg) { %>
            <div class="success-message">
                <strong>Success!</strong> <%= flashMessages.success_msg %>
            </div>
        <% } %>
        <% if (flashMessages.error_msg) { %>
            <div class="error-message">
                <strong>Error!</strong> <%= flashMessages.error_msg %>
            </div>
        <% } %>

        <div class="flex justify-end mb-4">
            <a href="/admin/menu/addMenuItem" class="btn-primary hover-scale py-2 px-4 rounded">Add New Item</a>
        </div>
        <div class="table-section overflow-x-auto shadow-lg">
            <table class="min-w-full bg-transparent text-light">
                <thead>
                    <tr>
                        <th class="py-4 px-6 border-b text-left text-xl font-semibold">Name</th>
                        <th class="py-4 px-6 border-b text-left text-xl font-semibold">Price</th>
                        <th class="py-4 px-6 border-b text-left text-xl font-semibold">Category</th>
                        <th class="py-4 px-6 border-b text-left text-xl font-semibold">Available</th>
                        <th class="py-4 px-6 border-b text-left text-xl font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% menuItems.forEach(item => { %>
                        <tr>
                            <td class="py-2 px-6 border-b text-lg font-semibold"><%= item.name %></td>
                            <td class="py-2 px-6 border-b text-lg font-semibold">â‚¹<%= item.price %></td>
                            <td class="py-2 px-6 border-b text-lg font-semibold"><%= item.category %></td>
                            <td class="py-2 px-6 border-b text-lg font-semibold"><%= item.available ? 'Yes' : 'No' %></td>
                            <td class="py-2 px-6 border-b text-lg font-semibold flex items-center space-x-2">
                                <a href="/menu/<%= item._id %>" class="btn-primary hover-scale py-1 px-3 rounded">View</a>
                                <a href="/admin/menu/<%= item._id %>/edit" class="btn-primary hover-scale py-1 px-3 rounded">Edit</a>
                                <a href="/admin/menu/<%= item._id %>/delete" class="btn-primary hover-scale py-1 px-3 rounded">Delete</a>
                                <form action="/admin/menu/<%= item._id %>/toggle-availability" method="POST" class="inline">
                                    <button type="submit" class="btn-primary hover-scale py-1 px-3 rounded">Toggle Availability</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script>
        
            // Burger menus
            document.addEventListener('DOMContentLoaded', function () {
                // open
                const burger = document.querySelectorAll('.navbar-burger');
                const menu = document.querySelectorAll('.navbar-menu');

                if (burger.length && menu.length) {
                    for (var i = 0; i < burger.length; i++) {
                        burger[i].addEventListener('click', function () {
                            for (var j = 0; j < menu.length; j++) {
                                menu[j].classList.toggle('hidden');
                            }
                        });
                    }
                }

                // close
                const close = document.querySelectorAll('.navbar-close');
                const backdrop = document.querySelectorAll('.navbar-backdrop');

                if (close.length) {
                    for (var i = 0; i < close.length; i++) {
                        close[i].addEventListener('click', function () {
                            for (var j = 0; j < menu.length; j++) {
                                menu[j].classList.toggle('hidden');
                            }
                        });
                    }
                }

                if (backdrop.length) {
                    for (var i = 0; i < backdrop.length; i++) {
                        backdrop[i].addEventListener('click', function () {
                            for (var j = 0; j < menu.length; j++) {
                                menu[j].classList.toggle('hidden');
                            }
                        });
                    }
                }
            });
        // GSAP Animations
        gsap.from('.table-section', {
            duration: 1,
            y: 50,
            opacity: 0,
            stagger: 0.2
        });
    </script>
</body>

</html>

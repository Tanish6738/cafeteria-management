<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Menu | Cafeteria</title>
    <%- include('../partials/links') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lenis/1.0.0/lenis.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(rgba(26, 26, 26, 0.9), rgba(26, 26, 26, 0.9)),
                url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=2070&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
            min-height: 100vh;
        }

        .menu-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(197, 168, 128, 0.1);
            border-radius: 12px;
        }

        .menu-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .menu-title {
            font-size: 3rem;
            color: #C5A880;
            margin-bottom: 0.5rem;
        }

        .menu-subtitle {
            color: #ECDFCC;
            opacity: 0.8;
            font-size: 1.2rem;
        }

        .menu-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .search-container {
            flex: 1;
            min-width: 200px;
            max-width: 400px;
        }

        .search-input {
            width: 100%;
            padding: 0.75rem;
            background: rgba(26, 26, 26, 0.8);
            border: 1px solid rgba(197, 168, 128, 0.2);
            border-radius: 6px;
            color: #ECDFCC;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            outline: none;
            border-color: rgba(197, 168, 128, 0.4);
            box-shadow: 0 0 0 2px rgba(197, 168, 128, 0.1);
        }

        .filter-container {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .filter-btn {
            padding: 0.75rem 1.5rem;
            background: rgba(197, 168, 128, 0.1);
            border: 1px solid rgba(197, 168, 128, 0.2);
            color: #C5A880;
            border-radius: 6px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .filter-btn:hover,
        .filter-btn.active {
            background: rgba(197, 168, 128, 0.2);
            border-color: rgba(197, 168, 128, 0.4);
        }

        .add-item-btn {
            padding: 0.75rem 1.5rem;
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.2);
            color: #22c55e;
            border-radius: 6px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .add-item-btn:hover {
            background: rgba(34, 197, 94, 0.2);
            border-color: rgba(34, 197, 94, 0.4);
        }

        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .menu-item {
            background: rgba(26, 26, 26, 0.6);
            border: 1px solid rgba(197, 168, 128, 0.1);
            border-radius: 8px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .menu-item:hover {
            transform: translateY(-5px);
            border-color: rgba(197, 168, 128, 0.3);
        }

        .item-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .item-content {
            padding: 1.5rem;
        }

        .item-title {
            font-size: 1.5rem;
            color: #C5A880;
            margin-bottom: 0.5rem;
        }

        .item-category {
            font-size: 0.9rem;
            color: #ECDFCC;
            opacity: 0.8;
            margin-bottom: 1rem;
        }

        .item-price {
            font-size: 1.2rem;
            color: #ECDFCC;
            margin-bottom: 1rem;
        }

        .item-description {
            color: #ECDFCC;
            opacity: 0.9;
            margin-bottom: 1.5rem;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .item-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 0.5rem;
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.3s ease;
            cursor: pointer;
            font-size: 0.9rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            flex: 1;
            justify-content: center;
        }

        .btn-primary {
            background: rgba(197, 168, 128, 0.1);
            border: 1px solid rgba(197, 168, 128, 0.2);
            color: #C5A880;
        }

        .btn-primary:hover {
            background: rgba(197, 168, 128, 0.2);
            border-color: rgba(197, 168, 128, 0.4);
        }

        .btn-danger {
            background: rgba(220, 38, 38, 0.1);
            border: 1px solid rgba(220, 38, 38, 0.2);
            color: #ef4444;
        }

        .btn-danger:hover {
            background: rgba(220, 38, 38, 0.2);
            border-color: rgba(220, 38, 38, 0.4);
        }

        .flash-message {
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 6px;
            text-align: center;
        }

        .success-message {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.2);
            color: #22c55e;
        }

        .error-message {
            background: rgba(220, 38, 38, 0.1);
            border: 1px solid rgba(220, 38, 38, 0.2);
            color: #ef4444;
        }

        @media (max-width: 768px) {
            .menu-container {
                margin: 1rem;
                padding: 1.5rem;
            }

            .menu-title {
                font-size: 2.5rem;
            }

            .menu-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .search-container {
                max-width: none;
            }

            .item-actions {
                flex-direction: column;
            }
        }
    </style>
</head>

<body class="min-h-screen bg-[#1a1a1a]">
    <%- include('../partials/navbar') %>

    <div class="menu-container">
        <div class="menu-header">
            <h1 class="menu-title">Menu Management</h1>
            <p class="menu-subtitle">Manage your menu items</p>
        </div>

        <% if (messages.success_msg) { %>
            <div class="flash-message success-message">
                <%= messages.success_msg %>
            </div>
        <% } %>
        <% if (messages.error_msg) { %>
            <div class="flash-message error-message">
                <%= messages.error_msg %>
            </div>
        <% } %>

        <div class="menu-actions">
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Search menu items...">
            </div>
            <div class="filter-container">
                <button class="filter-btn active">All</button>
                <button class="filter-btn">Appetizers</button>
                <button class="filter-btn">Main Course</button>
                <button class="filter-btn">Desserts</button>
                <button class="filter-btn">Beverages</button>
            </div>
            <a href="/admin/menu/addMenuItem" class="add-item-btn">
                <i class="fas fa-plus"></i>
                Add New Item
            </a>
        </div>

        <div class="menu-grid">
            <% menuItems.forEach(item => { %>
                <div class="menu-item" data-category="<%= item.category %>">
                    <% if (item.image) { %>
                        <img src="<%= item.image %>" alt="<%= item.name %>" class="item-image">
                    <% } %>
                    <div class="item-content">
                        <h3 class="item-title"><%= item.name %></h3>
                        <p class="item-category"><%= item.category %></p>
                        <p class="item-price">$<%= item.price.toFixed(2) %></p>
                        <p class="item-description"><%= item.description %></p>
                        <div class="item-actions">
                            <a href="/admin/menu/<%= item._id %>/edit" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                Edit
                            </a>
                            <form action="/admin/menu/<%= item._id %>/delete" method="POST" style="flex: 1;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                                    <i class="fas fa-trash-alt"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <%- include('../partials/scripts') %>

    <script>
        // Initialize Lenis for smooth scrolling
        const lenis = new Lenis({
            duration: 1.2,
            easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
            direction: 'vertical',
            gestureDirection: 'vertical',
            smooth: true,
            mouseMultiplier: 1,
            smoothTouch: false,
            touchMultiplier: 2,
            infinite: false,
        });

        function raf(time) {
            lenis.raf(time);
            requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);

        // GSAP Animations
        gsap.from('.menu-header', {
            opacity: 0,
            y: 30,
            duration: 1,
            ease: 'power3.out'
        });

        gsap.from('.menu-actions', {
            opacity: 0,
            y: 20,
            duration: 0.8,
            delay: 0.3,
            ease: 'power3.out'
        });

        gsap.from('.menu-item', {
            opacity: 0,
            y: 30,
            duration: 0.8,
            stagger: 0.1,
            delay: 0.5,
            ease: 'power3.out'
        });

        // Auto-hide flash messages
        const flashMessages = document.querySelectorAll('.flash-message');
        flashMessages.forEach(message => {
            setTimeout(() => {
                message.style.opacity = '0';
                setTimeout(() => message.remove(), 300);
            }, 3000);
        });

        // Search and Filter Functionality
        const searchInput = document.querySelector('.search-input');
        const filterBtns = document.querySelectorAll('.filter-btn');
        const menuItems = document.querySelectorAll('.menu-item');

        document.addEventListener('DOMContentLoaded', () => {
            filterItems();
        });

        function filterItems() {
            const searchTerm = searchInput.value.toLowerCase();
            const activeFilter = document.querySelector('.filter-btn.active').textContent;

            menuItems.forEach(item => {
                const title = item.querySelector('.item-title').textContent.toLowerCase();
                const category = item.dataset.category;
                const matchesSearch = title.includes(searchTerm);
                const matchesFilter = activeFilter === 'All' || category === activeFilter;

                if (matchesSearch && matchesFilter) {
                    item.style.display = 'block';
                    gsap.to(item, {
                        opacity: 1,
                        y: 0,
                        duration: 0.4,
                        ease: 'power2.out'
                    });
                } else {
                    gsap.to(item, {
                        opacity: 0,
                        y: 20,
                        duration: 0.4,
                        ease: 'power2.out',
                        onComplete: () => item.style.display = 'none'
                    });
                }
            });
        }

        searchInput.addEventListener('input', filterItems);

        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                filterBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                filterItems();
            });
        });
    </script>
</body>
</html>
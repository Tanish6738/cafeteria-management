<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cafe Home</title>

    <!-- Import TailwindCSS and FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@400;700&display=swap"
        rel="stylesheet" />

    <style>
        body {
            font-family: 'Playfair Display', serif;
            background: url('https://images.unsplash.com/photo-1526234362653-3b75a0c07438?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
        }

        .menu-item {
            background-color: rgba(60, 61, 55, 0.8);
            border-radius: 8px;
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }

        .menu-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(236, 223, 204, 0.2);
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 50;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.8);
        }

        .modal-content {
            background-color: #3c3d37;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 90%;
            max-width: 600px;
            color: #ECDFCC;
            border-radius: 10px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: #ECDFCC;
            text-decoration: none;
            cursor: pointer;
        }

        .inputModel {
            background-color: #3c3d37;
            border: 1px solid #888;
            color: #ECDFCC;
            font-size: 25px;
        }

        .Menu {
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body>
    <!-- Navbar Include -->
    <%- include('../partials/navbar') %>
 <!-- Flash Messages -->
 <% if (flashMessages.success_msg) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline"><%= flashMessages.success_msg %></span>
    </div>
<% } %>
<% if (flashMessages.error_msg) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= flashMessages.error_msg %></span>
    </div>
<% } %>
        <!-- Main Container -->
        <div class="container mx-auto py-10 px-4 sm:px-6 lg:px-8 bg-[#4b3a36] text-[#e8d5b7] rounded-lg">
            <div class="text-center mb-4">
                <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold">Our Menu</h1>
                <div class="flex justify-center mt-4">
                    <i class="fas fa-star mx-1 text-[#e8d5b7]"></i>
                    <i class="fas fa-star mx-1 text-[#e8d5b7]"></i>
                    <i class="fas fa-star mx-1 text-[#e8d5b7]"></i>
                    <i class="fas fa-star mx-1 text-[#e8d5b7]"></i>
                    <i class="fas fa-star mx-1 text-[#e8d5b7]"></i>
                </div>
            </div>

            <!-- Menu Section -->
            <div id="Menu" class="Menu mx-auto py-10 text-[#e8d5b7] rounded-lg shadow-lg">
                <!-- Dynamically Render Menu Items -->
                <% menuItems.forEach((item, index)=> { %>
                    <div class="menu-item flex flex-col sm:flex-row justify-between items-center p-6 border-b border-[#e8d5b7]"
                        onclick="openModal(<%= index %>)">
                        <div class="flex-1">
                            <h4 class="text-xl font-bold underline">
                                <%= item.name %>
                            </h4>
                            <p class="text-sm">Delicious description</p>
                        </div>
                        <div class="hidden sm:block flex-1 text-center">
                            -------------------------------------------------
                        </div>
                        <div class="text-xl font-bold flex-1 text-right">$<%= item.price %>
                        </div>
                    </div>
                    <br>
                    <% }); %>
            </div>
        </div>

        <!-- Modal for Detailed View of Menu Items -->
        <div id="itemModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal()">&times;</span>
                <div id="modalContent"></div>
            </div>
        </div>

        <!-- Script for Modal Functionality and GSAP Animations -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>

        <script>

            // Burger menus
            document.addEventListener('DOMContentLoaded', function () {
                // open
                const burger = document.querySelectorAll('.navbar-burger');
                const menu = document.querySelectorAll('.navbar-menu');

                if (burger.length && menu.length) {
                    for (var i = 0; i < burger.length; i++) {
                        burger[i].addEventListener('click', function () {
                            for (var j = 0; j < menu.length; j++) {
                                menu[j].classList.toggle('hidden');
                            }
                        });
                    }
                }

                // close
                const close = document.querySelectorAll('.navbar-close');
                const backdrop = document.querySelectorAll('.navbar-backdrop');

                if (close.length) {
                    for (var i = 0; i < close.length; i++) {
                        close[i].addEventListener('click', function () {
                            for (var j = 0; j < menu.length; j++) {
                                menu[j].classList.toggle('hidden');
                            }
                        });
                    }
                }

                if (backdrop.length) {
                    for (var i = 0; i < backdrop.length; i++) {
                        backdrop[i].addEventListener('click', function () {
                            for (var j = 0; j < menu.length; j++) {
                                menu[j].classList.toggle('hidden');
                            }
                        });
                    }
                }
            });

          
            // Inject menuItems JSON into the client-side
            const menuItems = <%- JSON.stringify(menuItems) %>;

            // Modal opening logic
            function openModal(index) {
                const item = menuItems[index];
                const modalContent = `
        <div class="text-center">
            <h2 class="text-4xl font-bold mb-4 underline">${item.name}</h2>
            <img src="/${item.image}" class="w-48 h-48 mb-4 mx-auto rounded-full shadow-lg">
            <p class="mb-4 text-lg">${item.description}</p>
            <p class="mb-4 text-2xl font-semibold">Price: $${item.price}</p>
            <form action="/cart/new" method="POST">
                <input type="hidden" name="menuItemId" value="${item._id}">
                <div class="mb-4">
                    <label for="quantity_${item._id}" class="text-xl underline">Quantity</label>
                    <input type="number" name="quantity" id="quantity_${item._id}" class="inputModel w-full p-2 border border-gray-300 rounded mt-1 bg-[#3C3D37] text-[#e8d5b7]" value="1" min="1" required>
                </div>
                <button type="submit" class="mt-4 bg-green-600 hover:bg-green-700 text-white py-2 px-6 rounded-full transition duration-300 transform hover:scale-105">
                    Add to Cart
                </button>
            </form>
            <button class="mt-4 bg-green-600 hover:bg-green-700 text-white py-2 px-6 rounded-full transition duration-300 transform hover:scale-105">
                <a href="/menu/${item._id}" class="text-white">View Details</a>
            </button>
        </div>`;
                document.getElementById('modalContent').innerHTML = modalContent;
                document.getElementById('itemModal').style.display = "block";
            }

            // Close modal
            function closeModal() {
                document.getElementById('itemModal').style.display = "none";
            }

            // Close modal when clicking outside
            window.onclick = function (event) {
                const modal = document.getElementById('itemModal');
                if (event.target == modal) {
                    closeModal();
                }
            }
        </script>
</body>

</html>
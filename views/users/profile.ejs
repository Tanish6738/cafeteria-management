<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <%- include('../partials/links') %>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Playfair Display', serif;
            background: url('https://images.unsplash.com/photo-1526234362653-3b75a0c07438?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
        }

        .profile-container {
            background-color: rgba(60, 61, 55, 0.8);
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            padding: 40px;
            color: #ECDFCC;
        }

        .btn-primary {
            background-color: #697565;
            border-color: #697565;
            color: #fff;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #3C3D37;
            border-color: #3C3D37;
        }

        .hover-scale {
            transition: transform 0.3s ease-in-out;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }

        .container-custom {
            background-color: rgba(60, 61, 55, 0.85);
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            padding: 20px;
            color: #ECDFCC;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

    <div class="container mx-auto mt-16 fade-in px-4">
        <!-- Flash Messages -->
        <% if (flashMessages && flashMessages.success_msg) { %>
            <div class="success-message">
                <strong>Success!</strong> <%= flashMessages.success_msg %>
            </div>
        <% } %>
        <% if (flashMessages && flashMessages.error_msg) { %>
            <div class="error-message">
                <strong>Error!</strong> <%= flashMessages.error_msg %>
            </div>
        <% } %>

        <div class="container-custom pb-8">
            <div class="flex flex-col items-center mt-2">
                <div class="flex items-center space-x-2 mt-2">
                    <p class="text-2xl font-bold underline">User Profile</p>
                </div>
                <p class="text-lg text-gray-300">User ID: <%= user._id %></p>
                <p class="text-lg text-gray-400">Username: <%= user.username %></p>
                <p class="text-lg text-gray-400">Email: <%= user.email %></p>
                <p class="text-lg text-gray-400">Mobile: <%= user.mobile %></p>
                <a href="/user/profile/edit" class="mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white p-2 rounded transition duration-300 ease-in-out transform hover:scale-105">Edit Profile</a>
            </div>
        </div>

        <!-- Current Orders Section -->
        <div class="container-custom p-8 mt-10">
            <h3 class="text-2xl font-bold mb-4">Current Orders</h3>
            <% if (currentOrders && currentOrders.length > 0) { %>
                <% currentOrders.forEach(order => { %>
                    <div class="mb-4 p-4 bg-gray-800 rounded">
                        <h4 class="text-xl font-bold mb-2">Order ID: <%= order._id %></h4>
                        <p class="mb-2"><strong>Date:</strong> <%= new Date(order.createdAt).toDateString() %></p>
                        <p class="mb-2"><strong>Status:</strong> <%= order.status %></p>
                        <h5 class="text-lg font-bold mt-2">Items:</h5>
                        <ul class="list-disc list-inside">
                            <% order.items.forEach(item => { %>
                                <li><%= item.menuItem.name %> - <%= item.quantity %> x ₹<%= item.menuItem.price %></li>
                            <% }) %>
                        </ul>
                        <a href="/customer/orders/<%= order.tableNumber %>/receipt" class="mt-2 inline-block bg-green-500 hover:bg-green-700 text-white p-2 rounded">View Receipt</a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No current orders found.</p>
            <% } %>
        </div>

        <!-- Previous Orders Section -->
        <div class="container-custom p-8 mt-10">
            <h3 class="text-2xl font-bold mb-4">Previous Orders</h3>
            <% if (previousOrders && previousOrders.length > 0) { %>
                <% previousOrders.forEach(order => { %>
                    <div class="mb-4 p-4 bg-gray-800 rounded">
                        <h4 class="text-xl font-bold mb-2">Order ID: <%= order._id %></h4>
                        <p class="mb-2"><strong>Date:</strong> <%= new Date(order.createdAt).toDateString() %></p>
                        <p class="mb-2"><strong>Status:</strong> <%= order.status %></p>
                        <h5 class="text-lg font-bold mt-2">Items:</h5>
                        <ul class="list-disc list-inside">
                            <% order.items.forEach(item => { %>
                                <li><%= item.menuItem.name %> - <%= item.quantity %> x ₹<%= item.menuItem.price %></li>
                            <% }) %>
                        </ul>
                        <a href="/customer/orders/<%= order.tableNumber %>/receipt" class="mt-2 inline-block bg-green-500 hover:bg-green-700 text-white p-2 rounded">View Receipt</a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No previous orders found.</p>
            <% } %>
        </div>

        <!-- Payment History Section -->
        <div class="container-custom p-8 mt-10">
            <h3 class="text-2xl font-bold mb-4">Payment History</h3>
            <% if (user.paymentHistory && user.paymentHistory.length > 0) { %>
                <% user.paymentHistory.forEach(payment => { %>
                    <div class="mb-4 p-4 bg-gray-800 rounded">
                        <h4 class="text-xl font-bold mb-2">Payment ID: <%= payment._id %></h4>
                        <p class="mb-2"><strong>Order ID:</strong> <%= payment.orderId._id %></p>
                        <p class="mb-2"><strong>Amount:</strong> ₹<%= payment.amount %></p>
                        <p class="mb-2"><strong>Date:</strong> <%= new Date(payment.date).toDateString() %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No payment history found.</p>
            <% } %>
        </div>
    </div>

    <!-- GSAP Animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script>
        gsap.from('.profile-container', {
            duration: 1,
            y: 50,
            opacity: 0,
            ease: 'power3.out'
        });
    </script>
</body>

</html>

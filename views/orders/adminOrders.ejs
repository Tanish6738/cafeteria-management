<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Orders</title>
    <%- include('../partials/links') %>
    <style>
        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(rgba(26, 26, 26, 0.9), rgba(26, 26, 26, 0.9)),
                url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=2070&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(197, 168, 128, 0.1);
            border-radius: 12px;
        }

        .table-section {
            margin-bottom: 2rem;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(197, 168, 128, 0.2);
        }

        th {
            background: rgba(197, 168, 128, 0.1);
            color: #C5A880;
        }

        tr:hover {
            background: rgba(197, 168, 128, 0.1);
        }

        .btn-primary {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: rgba(197, 168, 128, 0.2);
            border: 1px solid rgba(197, 168, 128, 0.3);
            color: #C5A880;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: rgba(197, 168, 128, 0.3);
            transform: translateY(-2px);
        }

        .status-badge {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-size: 0.875rem;
            text-align: center;
        }

        .status-pending {
            background: rgba(255, 165, 0, 0.1);
            color: #ffa500;
        }

        .status-completed {
            background: rgba(34, 197, 94, 0.1);
            color: #22c55e;
        }

        .status-cancelled {
            background: rgba(220, 38, 38, 0.1);
            color: #ef4444;
        }

        @media (max-width: 768px) {
            .container {
                margin: 1rem;
                padding: 1rem;
            }

            th, td {
                padding: 0.5rem;
            }
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <h1 class="text-3xl font-bold mb-6 text-center text-[#C5A880]">Admin Orders Management</h1>
        <div class="table-section">
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order._id %></td>
                            <td><%= order.customer.name %></td>
                            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                            <td>
                                <span class="status-badge 
                                    <%= order.status === 'pending' ? 'status-pending' : '' %>
                                    <%= order.status === 'completed' ? 'status-completed' : '' %>
                                    <%= order.status === 'cancelled' ? 'status-cancelled' : '' %>">
                                    <%= order.status %>
                                </span>
                            </td>
                            <td>$<%= order.total.toFixed(2) %></td>
                            <td>
                                <a href="/admin/orders/<%= order._id %>" class="btn-primary">View</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('../partials/scripts') %>

</body>

</html>
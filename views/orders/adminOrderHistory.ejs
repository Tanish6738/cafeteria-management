<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Order History</title>
    <%- include('../partials/links') %>
    <style>
        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(rgba(26, 26, 26, 0.9), rgba(26, 26, 26, 0.9)),
                url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=2070&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(197, 168, 128, 0.1);
            border-radius: 12px;
        }

        .table-container {
            margin-bottom: 2rem;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(197, 168, 128, 0.2);
        }

        th {
            background: rgba(197, 168, 128, 0.1);
            color: #C5A880;
        }

        tr:hover {
            background: rgba(197, 168, 128, 0.1);
        }

        .btn-primary {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: rgba(197, 168, 128, 0.2);
            border: 1px solid rgba(197, 168, 128, 0.3);
            color: #C5A880;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: rgba(197, 168, 128, 0.3);
            transform: translateY(-2px);
        }

        .success-message {
            background-color: rgba(144, 238, 144, 0.1);
            border: 1px solid green;
            color: green;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .hover-scale {
            transition: transform 0.3s ease-in-out;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }

        @media (max-width: 768px) {
            .container {
                margin: 1rem;
                padding: 1rem;
            }

            th, td {
                padding: 0.5rem;
            }
        }

        .status-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.875rem;
        }

        .status-badge.pending { background: rgba(255, 193, 7, 0.2); color: #ffc107; }
        .status-badge.preparing { background: rgba(0, 123, 255, 0.2); color: #007bff; }
        .status-badge.ready { background: rgba(40, 167, 69, 0.2); color: #28a745; }
        .status-badge.served { background: rgba(23, 162, 184, 0.2); color: #17a2b8; }
        .status-badge.completed { background: rgba(40, 167, 69, 0.2); color: #28a745; }
        .status-badge.cancelled { background: rgba(220, 53, 69, 0.2); color: #dc3545; }

        .view-history-btn {
            background: rgba(197, 168, 128, 0.2);
            color: #C5A880;
            border: 1px solid #C5A880;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .view-history-btn:hover {
            background: rgba(197, 168, 128, 0.3);
        }

        .history-details {
            margin-top: 1rem;
            padding: 1rem;
            background: rgba(26, 26, 26, 0.5);
            border: 1px solid rgba(197, 168, 128, 0.2);
            border-radius: 4px;
        }

        .history-item {
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(197, 168, 128, 0.1);
        }

        .history-item:last-child {
            border-bottom: none;
        }

        .history-status {
            font-weight: bold;
            color: #C5A880;
        }

        .history-time {
            display: block;
            font-size: 0.875rem;
            color: rgba(236, 223, 204, 0.7);
        }

        .history-notes {
            margin-top: 0.25rem;
            font-style: italic;
            color: rgba(236, 223, 204, 0.8);
        }

        .history-user {
            font-size: 0.875rem;
            color: rgba(236, 223, 204, 0.7);
        }

        .hidden {
            display: none;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1 class="text-3xl font-bold mb-6 text-center text-[#C5A880]">Order History</h1>
        
        <% if (flashMessages && flashMessages.success_msg) { %>
            <div class="alert alert-success mb-4">
                <%= flashMessages.success_msg %>
            </div>
        <% } %>

        <% if (flashMessages && flashMessages.error_msg) { %>
            <div class="alert alert-danger mb-4">
                <%= flashMessages.error_msg %>
            </div>
        <% } %>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Items</th>
                        <th>Total Amount</th>
                        <th>Final Status</th>
                        <th>Created At</th>
                        <th>Status History</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order._id %></td>
                            <td><%= order.customer ? `${order.customer.firstName} ${order.customer.lastName}` : 'N/A' %></td>
                            <td>
                                <% order.items.forEach(item => { %>
                                    <%= item.menuItem.name %> x <%= item.quantity %><br>
                                <% }) %>
                            </td>
                            <td>â‚¹<%= order.totalAmount.toFixed(2) %></td>
                            <td>
                                <span class="status-badge <%= order.status.toLowerCase() %>">
                                    <%= order.status %>
                                </span>
                            </td>
                            <td><%= new Date(order.createdAt).toLocaleString() %></td>
                            <td>
                                <button onclick="toggleHistory('<%= order._id %>')" class="view-history-btn">
                                    View History
                                </button>
                                <div id="history-<%= order._id %>" class="history-details hidden">
                                    <% if (order.statusHistory && order.statusHistory.length > 0) { %>
                                        <% order.statusHistory.forEach(history => { %>
                                            <div class="history-item">
                                                <span class="history-status"><%= history.status %></span>
                                                <span class="history-time">
                                                    <%= new Date(history.timestamp).toLocaleString() %>
                                                </span>
                                                <% if (history.notes) { %>
                                                    <div class="history-notes">
                                                        Note: <%= history.notes %>
                                                    </div>
                                                <% } %>
                                                <% if (history.updatedBy) { %>
                                                    <div class="history-user">
                                                        By: <%= history.updatedBy.firstName %> <%= history.updatedBy.lastName %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <p>No status history available</p>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('../partials/scripts') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script>
        function toggleHistory(orderId) {
            const historyDiv = document.getElementById(`history-${orderId}`);
            historyDiv.classList.toggle('hidden');
        }

        // GSAP Animations
        gsap.from('.table-container', {
            duration: 1,
            y: 50,
            opacity: 0,
            ease: 'power3.out'
        });
    </script>
</body>

</html>

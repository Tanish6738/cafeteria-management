<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Order History</title>
    <%- include('../partials/links') %>
    <style>
        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(rgba(26, 26, 26, 0.9), rgba(26, 26, 26, 0.9)),
                url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=2070&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(197, 168, 128, 0.1);
            border-radius: 12px;
        }

        .table-container {
            margin-bottom: 2rem;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(197, 168, 128, 0.2);
        }

        th {
            background: rgba(197, 168, 128, 0.1);
            color: #C5A880;
        }

        tr:hover {
            background: rgba(197, 168, 128, 0.1);
        }

        .btn-primary {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: rgba(197, 168, 128, 0.2);
            border: 1px solid rgba(197, 168, 128, 0.3);
            color: #C5A880;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: rgba(197, 168, 128, 0.3);
            transform: translateY(-2px);
        }

        .success-message {
            background-color: rgba(144, 238, 144, 0.1);
            border: 1px solid green;
            color: green;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .hover-scale {
            transition: transform 0.3s ease-in-out;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }

        @media (max-width: 768px) {
            .container {
                margin: 1rem;
                padding: 1rem;
            }

            th, td {
                padding: 0.5rem;
            }
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1 class="text-3xl font-bold mb-6 text-center text-[#C5A880]">Order History</h1>
        <% if (flashMessages && flashMessages.success_msg) { %>
            <div class="success-message">
                <%= flashMessages.success_msg %>
            </div>
        <% } %>
        <% if (flashMessages && flashMessages.error_msg) { %>
            <div class="error-message">
                <strong>Error!</strong> <%= flashMessages.error_msg %>
            </div>
        <% } %>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Placed At</th>
                        <th>Updated At</th>
                        <th>Completed At</th>
                        <th>Status</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order._id %></td>
                                <td><%= order.customer.username %></td>
                                <td>
                                    <% if (order.placedAt && !isNaN(new Date(order.placedAt))) { %>
                                        <%= new Date(order.placedAt).toLocaleString() %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.updatedAt && !isNaN(new Date(order.updatedAt))) { %>
                                        <%= new Date(order.updatedAt).toLocaleString() %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.completedAt && !isNaN(new Date(order.completedAt))) { %>
                                        <%= new Date(order.completedAt).toLocaleString() %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.status === 'completed') { %>
                                        <span class="text-green-600 font-semibold">Completed</span>
                                    <% } else { %>
                                        <span class="text-gray-600 font-semibold capitalize"><%= order.status %></span>
                                    <% } %>
                                </td>
                                <td>â‚¹<%= order.total.toFixed(2) %></td>
                                <td>
                                    <a href="/admin/orders/<%= order._id %>" class="btn-primary hover-scale">View</a>
                                    <a href="/customer/orders/<%= order._id %>/receipt" class="btn-primary hover-scale">Receipt</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="py-4 px-6 text-center text-gray-600">No orders found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="mt-4 flex justify-center">
            <button class="btn-primary hover-scale py-2 px-4 rounded-l" onclick="prevPage()" aria-label="Previous Page">Previous</button>
            <button class="btn-primary hover-scale py-2 px-4 rounded-r" onclick="nextPage()" aria-label="Next Page">Next</button>
        </div>
    </div>
    <%- include('../partials/scripts') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script>
        // GSAP Animations
        gsap.from('.table-container', {
            duration: 1,
            y: 50,
            opacity: 0,
            stagger: 0.2
        });

        // Pagination logic (basic example)
        let currentPage = 1;
        const ordersPerPage = 10;

        function prevPage() {
            if (currentPage > 1) {
                currentPage--;
                window.location.href = `/admin/orders?page=${currentPage}`;
            }
        }

        function nextPage() {
            currentPage++;
            window.location.href = `/admin/orders?page=${currentPage}`;
        }
    </script>
</body>

</html>

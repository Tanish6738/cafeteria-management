<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin User Details</title>
    <%- include('../partials/links') %>
    <style>
        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(rgba(26, 26, 26, 0.9), rgba(26, 26, 26, 0.9)),
                url('https://images.unsplash.com/photo-1526234362653-3b75a0c07438?q=80&w=1932&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            color: var(--text-color);
        }

        .profile-container {
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(197, 168, 128, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .profile-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        .luxury-button {
            background: var(--primary-color);
            color: var(--secondary-color);
            padding: 0.8rem 2rem;
            border-radius: 5px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: 2px solid var(--primary-color);
        }

        .luxury-button:hover {
            background: transparent;
            color: var(--primary-color);
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

    <!-- Flash Messages -->
    <% if (flashMessages.success_msg) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline"><%= flashMessages.success_msg %></span>
        </div>
    <% } %>
    <% if (flashMessages.error_msg) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline"><%= flashMessages.error_msg %></span>
        </div>
    <% } %>

    <main class="container mx-auto px-4 py-8">
        <div class="profile-container p-8">
            <h1 class="heading-primary mb-8">Admin User Details</h1>
            <h3 class="text-2xl font-bold mb-4">User ID: <%= user._id %></h3>
            <p class="mb-2"><strong>Username:</strong> <%= user.username %></p>
            <p class="mb-2"><strong>Email:</strong> <%= user.email %></p>
            <p class="mb-2"><strong>Mobile:</strong> <%= user.mobile %></p>
            <p class="mb-2"><strong>Role:</strong> <%= user.role %></p>
            <a href="/admin/users/<%= user._id %>/edit" class="luxury-button mt-4 inline-block">Edit User</a>
        </div>

        <div class="profile-container mt-10 p-8">
            <h3 class="text-2xl font-bold mb-4">Orders</h3>
            <% if (orders && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                    <div class="mb-4 p-4 bg-gray-800 rounded">
                        <h4 class="text-xl font-bold mb-2">Order ID: <%= order._id %></h4>
                        <p class="mb-2"><strong>Date:</strong> <%= order.placedAt.toDateString() %></p>
                        <p class="mb-2"><strong>Status:</strong> <%= order.status %></p>
                        <p class="mb-2"><strong>Payment Status:</strong> <%= order.paymentStatus %></p>
                        <h5 class="text-lg font-bold mt-2">Items:</h5>
                        <ul class="list-disc list-inside">
                            <% order.items.forEach(item => { %>
                                <li><%= item.menuItem.name %> - <%= item.quantity %> x $<%= item.menuItem.price %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No orders found.</p>
            <% } %>
        </div>

        <div class="profile-container mt-10 p-8">
            <h3 class="text-2xl font-bold mb-4">Payment History</h3>
            <% if (user.paymentHistory && user.paymentHistory.length > 0) { %>
                <% user.paymentHistory.forEach(payment => { %>
                    <div class="mb-4 p-4 bg-gray-800 rounded">
                        <h4 class="text-xl font-bold mb-2">Payment ID: <%= payment._id %></h4>
                        <p class="mb-2"><strong>Order ID:</strong> <%= payment.orderId._id %></p>
                        <p class="mb-2"><strong>Amount:</strong> $<%= payment.amount %></p>
                        <p class="mb-2"><strong>Date:</strong> <%= payment.date.toDateString() %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No payment history found.</p>
            <% } %>
        </div>

        <div class="profile-container mt-10 p-8">
            <h3 class="text-2xl font-bold mb-4">Summary</h3>
            <p class="mb-2"><strong>Total Orders:</strong> <%= orderCount %></p>
            <p class="mb-2"><strong>Unpaid Orders:</strong> <%= unpaidOrders %></p>
        </div>
    </main>

    <!-- GSAP Animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script>
        // Burger menus
        document.addEventListener('DOMContentLoaded', function () {
            // open
            const burger = document.querySelectorAll('.navbar-burger');
            const menu = document.querySelectorAll('.navbar-menu');

            if (burger.length && menu.length) {
                for (var i = 0; i < burger.length; i++) {
                    burger[i].addEventListener('click', function () {
                        for (var j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }

            // close
            const close = document.querySelectorAll('.navbar-close');
            const backdrop = document.querySelectorAll('.navbar-backdrop');

            if (close.length) {
                for (var i = 0; i < close.length; i++) {
                    close[i].addEventListener('click', function () {
                        for (var j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }

            if (backdrop.length) {
                for (var i = 0; i < backdrop.length; i++) {
                    backdrop[i].addEventListener('click', function () {
                        for (var j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }
        });
        gsap.from('.profile-container', {
            duration: 1,
            y: 50,
            opacity: 0,
            ease: 'power3.out'
        });
    </script>
</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receipt Records</title>
    <%- include('../partials/links') %>
    <style>
        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(rgba(26, 26, 26, 0.9), rgba(26, 26, 26, 0.9)),
                url('https://images.unsplash.com/photo-1526234362653-3b75a0c07438?q=80&w=1932&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            color: #ECDFCC;
        }

        .records-container {
            background: rgba(26, 26, 26, 0.85);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(197, 168, 128, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .records-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        .luxury-button {
            background: #697565;
            color: #fff;
            padding: 0.8rem 2rem;
            border-radius: 5px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: 2px solid #697565;
        }

        .luxury-button:hover {
            background: transparent;
            color: #697565;
        }

        .heading-primary {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.5rem;
            color: #697565;
            text-align: center;
            margin-bottom: 2rem;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-8">
        <div class="records-container p-8">
            <h1 class="heading-primary mb-8">Receipt Records</h1>
            <!-- Flash Messages -->
            <% if (flashMessages.success_msg) { %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Success!</strong>
                    <span class="block sm:inline"><%= flashMessages.success_msg %></span>
                </div>
            <% } %>
            <% if (flashMessages.error_msg) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Error!</strong>
                    <span class="block sm:inline"><%= flashMessages.error_msg %></span>
                </div>
            <% } %>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-transparent text-light">
                    <thead>
                        <tr class="bg-gray-700">
                            <th class="px-4 py-2">Receipt ID</th>
                            <th class="px-4 py-2">Customer Name</th>
                            <th class="px-4 py-2">Table Number</th>
                            <th class="px-4 py-2">Total Amount</th>
                            <th class="px-4 py-2">Tax Amount</th>
                            <th class="px-4 py-2">Service Charge</th>
                            <th class="px-4 py-2">Payment Method</th>
                            <th class="px-4 py-2">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="receiptsTable">
                        <% if (receipts && receipts.length > 0) { %>
                            <% receipts.forEach(receipt => { %>
                                <tr class="border-t hover:bg-gray-600">
                                    <td class="border px-4 py-2"><%= receipt._id %></td>
                                    <td class="border px-4 py-2"><%= receipt.customer.username %></td>
                                    <td class="border px-4 py-2"><%= receipt.tableNumber %></td>
                                    <td class="border px-4 py-2">₹<%= receipt.totalAmount.toFixed(2) %></td>
                                    <td class="border px-4 py-2">₹<%= receipt.taxAmount.toFixed(2) %></td>
                                    <td class="border px-4 py-2">₹<%= receipt.serviceCharge.toFixed(2) %></td>
                                    <td class="border px-4 py-2"><%= receipt.paymentMethod %></td>
                                    <td class="border px-4 py-2">
                                        <a href="/admin/receipt/<%= receipt._id %>" class="luxury-button hover-scale p-2 rounded">View</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <p>No receipts found.</p>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <!-- Search Input -->
            <div class="mb-4">
                <input type="text" id="search" placeholder="Search by Receipt ID, Customer Name, or Table Number" class="w-full p-2 border border-gray-300 rounded">
            </div>
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Burger menus
            const burger = document.querySelectorAll('.navbar-burger');
            const menu = document.querySelectorAll('.navbar-menu');

            if (burger.length && menu.length) {
                for (let i = 0; i < burger.length; i++) {
                    burger[i].addEventListener('click', function () {
                        for (let j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }

            const close = document.querySelectorAll('.navbar-close');
            const backdrop = document.querySelectorAll('.navbar-backdrop');

            if (close.length) {
                for (let i = 0; i < close.length; i++) {
                    close[i].addEventListener('click', function () {
                        for (let j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }

            if (backdrop.length) {
                for (let i = 0; i < backdrop.length; i++) {
                    backdrop[i].addEventListener('click', function () {
                        for (let j = 0; j < menu.length; j++) {
                            menu[j].classList.toggle('hidden');
                        }
                    });
                }
            }
        });

        gsap.from('.records-container', {
            duration: 1,
            y: 50,
            opacity: 0,
            ease: 'power3.out'
        });

        // Search functionality
        document.getElementById('search').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('#receiptsTable tr');
            rows.forEach(row => {
                const receiptId = row.children[0].textContent.toLowerCase();
                const customerName = row.children[1].textContent.toLowerCase();
                const tableNumber = row.children[2].textContent.toLowerCase();
                if (receiptId.includes(searchValue) || customerName.includes(searchValue) || tableNumber.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
</body>

</html>
